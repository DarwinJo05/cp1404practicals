BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    TextInput:
        id: input_number
        text: '7'
        font_size: 48
        multiline: False

    BoxLayout:
        size_hint_y: None
        height: self.minimum_height
        spacing: 10

        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)

        Button:
            text: 'Clear'
            on_press: app.handle_clear()

    Label:
        id: output_label
        text: ''
        font_size: 48
        color: (1, 0.4, 0.6, 1)
