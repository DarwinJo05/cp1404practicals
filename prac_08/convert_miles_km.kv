BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    TextInput:
        id: miles_input
        text: '0'
        font_size: 48
        multiline: False
        input_filter: 'float'

    Label:
        id: km_label
        text: root.km_text
        font_size: 48
        color: (1, 1, 0, 1)  # yellow text
        size_hint_y: None
        height: 60
        canvas.before:
            Color:
                rgba: (0, 0, 0, 1)  # black background
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        size_hint_y: None
        height: 60
        spacing: 10

        Button:
            text: 'Up'
            background_color: (0.2, 0.2, 0.2, 1)
            color: (1, 1, 1, 1)
            font_size: 32
            on_press: app.handle_increment(1)

        Button:
            text: 'Down'
            background_color: (0.2, 0.2, 0.2, 1)
            color: (1, 1, 1, 1)
            font_size: 32
            on_press: app.handle_increment(-1)

        Button:
            text: 'Convert'
            background_color: (0.2, 0.2, 0.2, 1)
            color: (1, 1, 1, 1)
            font_size: 32
            on_press: app.handle_convert()
